mkdir -p /keys/
chmod 757 /keys/

echo "$SSH_KEY" > /keys/id_rsa
chmod 600 /keys/id_rsa

echo 'StrictHostKeyChecking=no' > /keys/config
chmod 600 /keys/config

# Echo some stuff to verify the files got created...
echo '====> SAVED FILES IN '
echo '====> ls /keys/'
ls /keys/
echo '====> cat /keys/config'
cat /keys/config
echo '====> cat /keys/id_rsa'
cat /keys/id_rsa
