mkdir -p /app/.ssh/
chmod 700 /app/.ssh/

echo "$SSH_KEY" > /app/.ssh/id_rsa
chmod 400 /app/.ssh/id_rsa

echo 'StrictHostKeyChecking=no' > /app/.ssh/config
chmod 600 /app/.ssh/config

echo '====> SAVED FILES IN /app/.ssh/'
echo '====> DIRECTORY CONTENTS:'
ls /app/.ssh/

echo '====> cat /app/.ssh/config'
cat /app/.ssh/config

echo '====> cat /app/.ssh/id_rsa'
cat /app/.ssh/id_rsa
